.player {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	background-color: black;
}
.movie {
	width: 100%;
	height: 440rpx;
}

/*  影片基本信息 start */
.movie_info {
	padding: 40rpx 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	background-color: #f7f4f9;
}
.cover {
	width: 280rpx;
	height: 380rpx;
}
.movie_desc {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	margin-left: 30rpx;
	width: 400rpx;
}
.title {
	font-size: 30px;
	width: 100%;
	overflow: hidden;
	white-space: nowrap;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}
.basic_info {
	color: darkgray;
	font-size: 13px;
	line-height: 36rpx;
	white-space: nowrap;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
}

/*  影片基本信息 end */

/* 评分块 start */
.score_block{
	background: white;
	margin-top: 20rpx;
	width: 360rpx;
	height: 90rpx;
	padding: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	    -ms-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	    -ms-flex-pack: start;
	        justify-content: flex-start;
	/* 追加阴影效果 */
	-webkit-box-shadow: 3px 2px 10px #dedede;
	        box-shadow: 3px 2px 10px #dedede;
}
.score_words {
	font-size: 12px;
	color: gray;
}
.score_stars {
	margin-left: 20rpx;
	margin-top: 10rpx;
}
.movie_score {
	font-size: 26px;
	font-weight: bold;
	margin-left: 8rpx;
	color: #FEAB2A;
	line-height: 60rpx;
}
.prise_counts {
	font-size: 12px;
	color: gray;
	line-height: 44rpx;
}

/* 评分块 end */

/* <!-- 剧情介绍    start --> */
.plots_block {
	background-color: #f7f4f9;
	padding: 20rpx 40rpx;
}
.plots_title {
	color: #A9A9A9;
	font-size: 14px;
}
.plots_desc {
	margin-top: 10rpx;
	font-size: 16px;
}

/* <!-- 剧情介绍    end --> */

